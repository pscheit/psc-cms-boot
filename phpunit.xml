<?xml version="1.0" encoding="utf-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="./tests/bootstrap.php"
>
    <testsuites>
        <testsuite name="Psc - CMS - Bootpackage">
          <directory>./tests</directory>
        </testsuite>
    </testsuites>

    <logging>
      <log type="coverage-html" target="build/coverage" title="Psc - CMS - Bootpackage" charset="UTF-8" yui="true" highlight="true" lowUpperBound="35" highLowerBound="70"/>
    </logging>
    
    <filter>
      <whitelist>
        <directory suffix=".php">lib/</directory>
      </whitelist>
    </filter>
</phpunit>